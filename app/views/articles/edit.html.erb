<div class="container">

<h4>Edit an article</h4>


<%if @error %>
	<div class="alert alert-danger"><%=@error.join(",")%></div>
<% end %>


<%= form_for :article,url: article_path(@article),method: :put do |f| %>

<div class="form-row">
<div class="form-group col-md-6">
	<%= f.label :title %>
	<%= f.text_field :title, class: "form-control" %>
</div>
</div>

<div class="form-row">
<div class="form-group col-md-8">
	<%= f.label :text %>
	<%= f.text_area :text, class: "form-control" %>
</div>
</div>

<div class="form-group">
	<%= f.submit 'Save article' ,class: "btn btn-outline-success" %>   
	<%= link_to "Back", :back, class: "btn btn-outline-secondary" %>	
</div>

<% end %>

</div>
	


